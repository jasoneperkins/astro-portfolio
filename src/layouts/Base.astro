---
import BaseHead from "@components/BaseHead.astro"
import PageFooter from "@components/PageFooter.astro"
import PageHeader from "@components/PageHeader.astro"

import "@fontsource-variable/outfit"
import "@styles/global.css"

const theme = Astro.cookies.get("theme")?.value

const {title, description, coverImage, class: classMain} = Astro.props
---

<!doctype html>
<html lang="en" data-theme={theme}>
  <BaseHead {title} {description} {coverImage} />
  <body class="grid grid-rows-[auto_1fr_auto] min-h-screen font-display">
    <PageHeader {title} />
    <main class={classMain}>
      <slot />
    </main>
    <PageFooter />
  </body>
</html>
