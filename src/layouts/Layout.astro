import PageFooter from "@components/PageFooter.astro"
import PageHeader from "@components/PageHeader.astro"
---

<!doctype html>
<html lang="en">
  <BaseHead />
  <body style="display: grid; grid-template-rows: auto 1fr auto;">
    <PageHeader />
    <main>
      <slot />
    </main>
    <PageFooter />
  </body>
