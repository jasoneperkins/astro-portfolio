---
import {Breadcrumbs} from "astro-breadcrumbs"

import "astro-breadcrumbs/breadcrumbs.css"

const {title} = Astro.props
---

<style>
  hgroup {
    --position-truncated-breadcrumbs: relative;
    --color-link-breadcrumbs: light-dark(black, white);
    --spacing-vertical-separator-breadcrumbs: 1rem;
  }

  svg {
    stroke: light-dark(black, white);
  }
</style>

<hgroup class="flex flex-col gap-y-4 pt-36 pb-12">
  <h1 class="!mb-0 text-balance">{title}</h1>
  <Breadcrumbs linkTextFormat="capitalized">
    <svg
      slot="index"
      aria-label="Home Page"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="black"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round">
      <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline>
    </svg>
    <svg
      slot="separator"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="black"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round">
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
  </Breadcrumbs>
</hgroup>
